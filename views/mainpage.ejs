<!-- mainPage.ejs -->
<!DOCTYPE html>
<html>

<head>
   <title>Main Page</title>
   <!-- Include Socket.IO client script -->
   <style>
      body {
         font-family: Arial, sans-serif;
         background-color: #1802676c;
         margin: 0;
         padding: 0;
         height: 100vh;
         display: flex;
         flex-direction: column;

      }

      .profile {
         height: 12vh;
         width: 12vh;
         display: flex;
         flex-direction: column;
         justify-content: center;
         align-items: center;
         background-color: #18026700;
         position: absolute;
         left: 80%;
         top: 0%;
         font-variant: small-caps;

      }

      .profile a {
         height: 8vh;
         width: 8vh;
         border-radius: 50%;
         background-color: aliceblue;
         display: flex;
         align-items: center;
         justify-content: center;

      }

      .profile a svg {
         height: 6vh;
         width: 6vh;

      }

      ul li {
         list-style: none;
         height: 8vh;
         width: 90vw;
         justify-content: left;
         display: flex;
         align-items: center;
         font-variant: small-caps;
         margin: 1vw;
         color: black;
         scroll-behavior: smooth;
      }

      ul li svg {
         height: 6vh;
         width: 6vh;
         position: relative;

      }

      ul li a {
         text-decoration: none;
      }

      ul li:hover {
         border: 2px solid black;
         scale: 1.02;
      }

      .top {
         height: 20vh;
         width: 100vw;
         background-color: rgba(18, 140, 247, 0.996);
         position: absolute;
         position: fixed;
         z-index: 5;
      }

      .top h1 {
         position: absolute;
         top: 0%;
         left: 10%;
         font-style: italic;
         font-variant: small-caps;
      }

      .top h5 {
         position: absolute;
         top: 40%;
         left: 10%;
         word-wrap: break-word;
         font-style: italic;
         font-variant: small-caps;
      }

      .list {
         width: 100vw;
         position: absolute;
         top: 20vh;
         overflow-x: hidden;
      }
   </style>
</head>

<body>
   <div class="top">
      <h1>let's blog here</h1>
      <h5>Exploring the World Through Words: A Journey into the Heart of Ideas</h5>
      <div class="profile">
         <a href="/profile/<%= mail %>">
            <svg xmlns="http://www.w3.org/2000/svg"
               viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
               <path
                  d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z" />
            </svg>
         </a>profile
      </div>
   </div>
   <div class="list">
      <ul>
         <% for (let i=0; i < users.length; i++) { %>
            <a href="/profile/<%= users[i].email %>/<%=users[i].name%>">
               <li><svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                     <path
                        d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                  </svg>
                  <%= users[i].name %>
               </li>
            </a>
            <% } %>
      </ul>
   </div>
</body>

</html>